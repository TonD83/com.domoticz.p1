{
  "id": "com.plugwise.smile",
  "name": {
    "en": "Plugwise Smile P1",
    "nl": "Plugwise Smile P1"
  },

  "description": {
    "en": "Imports data from the Plugwise Smile P1 energy meter",
    "nl": "Leest data van de Plugwise Smile P1 energie meter"
  },
	"tags": {
		"en": [ "dsmr", "p1", "plugwise", "smile", "power", "water", "gas" ],
		"nl": [ "dsmr", "p1", "plugwise", "smile", "power", "water", "gas" ]
	},
	"version": "3.0.1",
	"sdk": 2,
  "compatibility": ">= 1.5",
  "author": {
    "name": "Robin Gruijter",
    "email": "gruijter@hotmail.com"
  },
  "copyright": "Robin de Gruijter (gruijter@hotmail.com)",
  "license": " GPL-3.0-or-later",
  "contributing": {
    "donate": {
      "paypal": {
        "username": "gruijter"
      }
    }
  },
  "bugs": {
    "url": "https://github.com/gruijter/com.plugwise.smile/issues"
  },
  "homeyCommunityTopicId": 8012,

  "images": {
    "large": "./assets/images/large.jpg",
    "small": "./assets/images/small.jpg"
  },

  "category": ["tools","appliances", "energy"],
  "gtin": ["8718469270064"],
  "capabilities": {
    "meter_offPeak": {
      "type": "boolean",
      "title": {
        "en": "Off-peak",
        "nl": "Laag tarief"
      },
      "desc": {
        "en": "Is off-peak tarriff active?",
        "nl": "Is laag tarief actief?"
      },
      "getable": true,
      "setable": false,
      "insights": true,
      "icon": "./drivers/smilep1/assets/images/offPeak_icon.svg"
    },
    "measure_gas": {
      "type": "number",
      "title": {
        "en": "Gas",
        "nl": "Gas"
      },
      "desc": {
        "en": "Gas usage (previous hour)",
        "nl": "Gasverbruik (vorige uur)"
      },
      "decimals": 4,
      "units": {
        "en": "m\u00B3",
        "nl": "m\u00B3"
      },
      "getable": true,
      "setable": false,
      "insights": true,
      "icon": "./drivers/smilep1/assets/images/gas_icon.svg"
    },
    "meter_power": {
			"type": "number",
			"title": {
				"en": "Power Meter",
				"nl": "Energiemeter",
				"de": "Energiezähler"
			},
			"decimals": 4,
			"units": {
				"en": "KWh"
			},
			"chartType": "spline",
			"desc": {
				"en": "Power usage in KiloWattHour (kWh)",
				"nl": "Stroomverbuik in KiloWattUur (kWh)",
				"de": "Energieverbrauch in Kilowattstunde (kWh)"
			},
			"options": {
				"isGenerator": {
					"type": "boolean",
					"default": false,
					"desc": {
						"en": "This flag is used to determine whether this devices uses or generates power.",
						"de": "Dieser Flag wird benutzt, um zu bestimmen, ob diese Geräte Energie verbrauchen oder produzieren."
					}
				}
			},
			"insights": true,
			"getable": true,
			"setable": false,
			"uiComponent": "sensor"
		}	
  },
  "drivers": [
    {
      "id": "smilep1",
      "name": {
        "en": "SmileP1",
        "nl": "SmileP1"
      },
      "images": {
        "large": "./drivers/smilep1/assets/images/large.jpg",
        "small": "./drivers/smilep1/assets/images/small.jpg"
      },
      "class": "sensor",
      "capabilities": [
        "measure_power",
        "meter_offPeak",
        "measure_gas",
        "meter_gas",
        "meter_power",
        "meter_power.peak",
        "meter_power.offPeak",
        "meter_power.producedPeak",
        "meter_power.producedOffPeak"
      ],
      "capabilitiesOptions": {
  			"meter_power.peak": {
  				"title": {
  					"en": "Power meter peak",
  					"nl": "Stroommeter piek"
  				}
        },
        "meter_power.offPeak": {
          "title": {
            "en": "Power meter off-peak",
            "nl": "Stroommeter dal"
          }
        },
        "meter_power.producedPeak": {
          "title": {
            "en": "Production peak",
            "nl": "Productie piek"
          }
        },
        "meter_power.producedOffPeak": {
          "title": {
            "en": "Production off-peak",
            "nl": "Productie dal"
          }
        }
      },

      "mobile": {
        "components": [
          {
            "id": "icon",
            "capabilities": [ ]
          },
          {
            "id": "sensor",
            "capabilities": [
              "measure_power",
              "meter_offPeak",
              "measure_gas",
              "meter_gas",
              "meter_power",
              "meter_power.peak",
              "meter_power.offPeak",
              "meter_power.producedPeak",
              "meter_power.producedOffPeak"
            ],
            "options": {
              "icons": {
                "measure_gas": "./drivers/smilep1/assets/images/gas_icon.svg",
                "meter_offPeak": "./drivers/smilep1/assets/images/offPeak_icon.svg"
              },
              "meter_offPeak":{
                "noblink": true,
                "invert": false,
                "label": {
                  "true": {
                    "en": "true",
                    "nl": "ja"
                  },
                  "false": {
                    "en": "false",
                    "nl": "nee"
                  }
                }
              }
            }
          }
        ]
      },

      "pair": [
          {
          "id": "pair"
        }
      ],
      "settings": [
				{
					"type": "group",
					"label": {
						"en": "Device information",
						"nl": "Device informatie"
					},
					"children": [
						{
              "id": "smileId",
              "type": "label",
              "label": {
                "en": "Smile ID",
                "nl": "Smile ID"
              },
              "value": "bcdfghjk"
            }
					]
				},
        {
          "type": "group",
          "label": {
						"en": "Connection",
						"nl": "Verbinding"
          },
          "children": [
            {
              "id": "smileIp",
              "type": "text",
              "label": {
								"en": "URL or IP address",
                "nl": "URL of IP adres"
              },
              "value": "0.0.0.0"
            },
            {
              "id": "pollingInterval",
              "type": "number",
              "label": {
								"en": "Polling interval (s)",
                "nl": "Polling interval (s)"
              },
              "attr": { "min": 10 },
              "value": 10
            }
					]
				},
				{
					"type": "group",
					"label": {
						"en": "Ledring",
						"nl": "Ledring"
					},
					"children": [
						{
							"id": "ledring_usage_limit",
							"type": "number",
							"label": {
								"en": "Max consumption (W)",
								"nl": "Max gebruik (W)"
							},
							"attr": { "min": 0 },
							"value": 3000
						},
						{
							"id": "ledring_production_limit",
							"type": "number",
							"label": {
								"en": "Max production (W)",
								"nl": "Max productie (W)"
							},
							"attr": { "min": 0 },
							"value": 3000
						}
					]
				}
      ]
    }
  ],

  "flow":	{
    "triggers":[
      {
        "id":"tariff_changed",
        "title": {
          "en":"Tariff has changed",
          "nl":"Tarief is gewijzigd"
        },
        "args": [
          {
            "name": "Smile",
            "type": "device",
            "filter": "driver_id=smilep1",
            "placeholder": {
              "en": "Which device",
              "nl": "Welk apparaat"
             }
          }
        ],
        "tokens":[
          {
            "name":"tariff",
            "type": "boolean",
            "title": {
              "en":"off-peak",
              "nl":"dal"
            },
            "example" : false
          }
        ]
      },
      {
        "id":"power_changed",
        "title": {
          "en":"Power use changed",
          "nl":"Stroomverbruik gewijzigd"
        },
        "args": [
          {
            "name": "Smile",
            "type": "device",
            "filter": "driver_id=smilep1",
            "placeholder": {
              "en": "Which device",
              "nl": "Welk apparaat"
             }
          }
        ],
        "tokens":[
          {
            "name":"power",
            "type": "number",
            "title": {
              "en":"Watt",
              "nl":"Watt"
            },
            "example" : 850
          },
          {
            "name":"power_delta",
            "type": "number",
            "title": {
              "en":"+- W",
              "nl":"+- W"
            },
          "example" : 18
          }
        ]
      }
    ],
    "conditions": [
      {
        "id": "offPeak",
        "title": {
          "en": "Tariff !{{is|isn't}} off-peak",
          "nl": "Tarief !{{is|is niet}} dal"
        },
        "args": [
          {
            "name": "Smile",
            "type": "device",
            "filter": "driver_id=smilep1",
            "placeholder": {
              "en": "Which device",
              "nl": "Welk apparaat"
             }
          }
        ]
      }
    ]
  },
  "screensavers": [
		{
			"name": "smile_power",
			"title": {
				"en": "Plugwise Smile P1 Power",
				"nl": "Plugwise Smile P1 Energie"
			}
		}
  ],
  "permissions": [
    "homey:manager:ledring"
  ]
}

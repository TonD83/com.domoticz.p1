{
  "id": "com.plugwise.smile",
  "name": {
    "en": "Plugwise Smile P1",
    "nl": "Plugwise Smile P1"
  },

  "description": {
    "en": "Imports data from the Plugwise Smile P1 energy meter",
    "nl": "Leest data van de Plugwise Smile P1 energie meter"
  },

  "version": "0.9.9",
  "compatibility": ">=0.8.37 || 1.x",
  "author": {
    "name": "Gruijter",
    "email": "gruijter@hotmail.com"
  },

  "images": {
    "large": "./assets/images/large.jpg",
    "small": "./assets/images/small.jpg"
  },

  "category": "tools",
  "drivers": [
    {
      "id": "smilep1",
      "name": {
        "en": "SmileP1",
        "nl": "SmileP1"
      },
      "pair": [
          {
          "id": "pair"
        }
      ],
      "settings": [
        {
          "type": "group",
          "label": {
            "en": "Smile P1 settings",
            "nl": "Smile P1 instellingen"
          },
          "children": [
            {
              "id": "smileId",
              "type": "text",
              "label": {
                "en": "Smile ID",
                "nl": "Smile ID"
              },
              "attr": {"disabled": true}
            },
            {
              "id": "smileIp",
              "type": "text",
              "label": {
                "en": "IP address",
                "nl": "IP adres"
              }
            },
            {
              "id": "ledring_usage_limit",
              "type": "number",
              "label": {
                "en": "Ledring screensaver max power (W)",
                "nl": "Ledring screensaver max gebruik (W)"
              },
              "attr": { "min": 0 }
            },
            {
              "id": "ledring_production_limit",
              "type": "number",
              "label": {
                "en": "Ledring screensaver max production (W)",
                "nl": "Ledring screensaver max productie (W)"
              },
              "attr": { "min": 0 }
            }
          ]
        }
      ],
      "images": {
        "large": "./drivers/smilep1/assets/images/large.jpg",
        "small": "./drivers/smilep1/assets/images/small.jpg"
      },
      "class": "sensor",
      "capabilities": [
        "measure_power",
        "meter_power",
        "meter_gas"
      ]
    }
  ],
  "flow":	{
    "triggers":[
      {
        "id":"tariff_changed",
        "title": {
          "en":"Tariff has changed",
          "nl":"Tarief is gewijzigd"
        },
        "args": [
          {
            "name": "Smile",
            "type": "device",
            "filter": "driver_uri=homey:app:com.plugwise.smile&driver_id=smilep1",
            "placeholder": {
              "en": "Which Smile device",
              "nl": "Welk Smile apparaat"
             }
          }
        ],
        "tokens":[
          {
            "name":"tariff",
            "title": {
              "en":"off-peak",
              "nl":"dal"
            }
          }
        ]
      },
      {
        "id":"power_changed",
        "title": {
          "en":"Power use changed",
          "nl":"Stroomverbruik gewijzigd"
        },
        "args": [
          {
            "name": "Smile",
            "type": "device",
            "filter": "driver_uri=homey:app:com.plugwise.smile&driver_id=smilep1",
            "placeholder": {
              "en": "Which Smile device",
              "nl": "Welk Smile apparaat"
             }
          }
        ],
        "tokens":[
          {
            "name":"power",
            "title": {
              "en":"Watt",
              "nl":"Watt"
            }
          },
          {
            "name":"power_delta",
            "title": {
              "en":"+- W",
              "nl":"+- W"
            }
          }
        ]
      }
    ],
    "conditions": [
      {
        "id": "offPeak",
        "title": {
          "en": "Tariff !{{is|isn't}} off-peak",
          "nl": "Tarief !{{is|is niet}} dal"
        },
        "args": [
          {
            "name": "Smile",
            "type": "device",
            "filter": "driver_uri=homey:app:com.plugwise.smile&driver_id=smilep1",
            "placeholder": {
              "en": "Which Smile device",
              "nl": "Welk Smile apparaat"
             }
          }
        ]
      }
    ]
  },
  "screensavers": [
		{
			"name": "smile_power",
			"title": {
				"en": "Plugwise Smile P1 Power",
				"nl": "Plugwise Smile P1 Energie"
			}
		}
  ],
  "permissions": [
    "homey:manager:ledring"
  ]
}

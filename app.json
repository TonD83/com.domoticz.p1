{
  "id": "com.plugwise.smile",
  "name": {
    "en": "Plugwise Smile P1",
    "nl": "Plugwise Smile P1"
  },

  "description": {
    "en": "Imports data from the Plugwise Smile P1 energy meter",
    "nl": "Leest data van de Plugwise Smile P1 energie meter"
  },

  "version": "0.9.12",
  "compatibility": ">=0.9.2 || 1.x",
  "author": {
    "name": "Gruijter",
    "email": "gruijter@hotmail.com"
  },

  "images": {
    "large": "./assets/images/large.jpg",
    "small": "./assets/images/small.jpg"
  },

  "category": ["tools","climate"],

  "capabilities": {
    "meter_offPeak": {
      "type": "boolean",
      "title": {
        "en": "Off-peak",
        "nl": "Laag tarief"
      },
      "desc": {
        "en": "Is off-peak tarriff active?",
        "nl": "Is laag tarief actief?"
      },
      "getable": true,
      "setable": false
    },
    "measure_gas": {
      "type": "number",
      "title": {
        "en": "Gas",
        "nl": "Gas"
      },
      "desc": {
        "en": "Gas usage (previous hour)",
        "nl": "Gasverbruik (vorige uur)"
      },
      "units": {
        "en": "m\u00B3",
        "nl": "m\u00B3"
      },
      "getable": true,
      "setable": false
    },
    "meter_power": {
      "type": "number",
      "title": {
        "en": "Power Meter",
        "nl": "Stroommeter"
      },
      "desc": {
        "en": "Power usage in kiloWatts Hour (kWh)",
        "nl": "Stroomverbruik in kiloWatt uur (kWh)"
      },
      "units": {
        "en": "kWh",
        "nl": "kWh"
      },
      "min": "-999999999999",
      "getable": true,
      "setable": false
    }
  },

  "drivers": [
    {
      "id": "smilep1",
      "name": {
        "en": "SmileP1",
        "nl": "SmileP1"
      },
      "images": {
        "large": "./drivers/smilep1/assets/images/large.jpg",
        "small": "./drivers/smilep1/assets/images/small.jpg"
      },
      "class": "sensor",
      "capabilities": [
        "measure_power",
        "meter_offPeak",
        "measure_gas",
        "meter_gas",
        "meter_power"
      ],

      "mobile": {
        "components": [
          {
            "id": "icon",
            "capabilities": [ ]
          },
          {
            "id": "sensor",
            "capabilities": [
              "measure_power",
              "meter_offPeak",
              "measure_gas",
              "meter_gas",
              "meter_power"
            ],
            "options": {
              "icons": {
                  "measure_gas": "./drivers/smilep1/assets/images/gas_icon.svg",
                  "meter_offPeak": "./drivers/smilep1/assets/images/offPeak_icon.svg"
              }
            }
          }
        ]
      },

      "pair": [
          {
          "id": "pair"
        }
      ],
      "settings": [
        {
          "type": "group",
          "label": {
            "en": "Smile P1 settings",
            "nl": "Smile P1 instellingen"
          },
          "children": [
            {
              "id": "smileId",
              "type": "text",
              "label": {
                "en": "Smile ID",
                "nl": "Smile ID"
              },
              "value": "bcdfghjk"
            },
            {
              "id": "smileIp",
              "type": "text",
              "label": {
                "en": "IP address",
                "nl": "IP adres"
              },
              "value": "0.0.0.0"
            },
            {
              "id": "ledring_usage_limit",
              "type": "number",
              "label": {
                "en": "Ledring screensaver max power (W)",
                "nl": "Ledring screensaver max gebruik (W)"
              },
              "attr": { "min": 0 },
              "value": 3000
            },
            {
              "id": "ledring_production_limit",
              "type": "number",
              "label": {
                "en": "Ledring screensaver max production (W)",
                "nl": "Ledring screensaver max productie (W)"
              },
              "attr": { "min": 0 },
              "value": 3000
            }
          ]
        }
      ]
    }
  ],

  "flow":	{
    "triggers":[
      {
        "id":"tariff_changed",
        "title": {
          "en":"Tariff has changed",
          "nl":"Tarief is gewijzigd"
        },
        "args": [
          {
            "name": "Smile",
            "type": "device",
            "filter": "driver_uri=homey:app:com.plugwise.smile&driver_id=smilep1",
            "placeholder": {
              "en": "Which Smile device",
              "nl": "Welk Smile apparaat"
             }
          }
        ],
        "tokens":[
          {
            "name":"tariff",
            "title": {
              "en":"off-peak",
              "nl":"dal"
            }
          }
        ]
      },
      {
        "id":"power_changed",
        "title": {
          "en":"Power use changed",
          "nl":"Stroomverbruik gewijzigd"
        },
        "args": [
          {
            "name": "Smile",
            "type": "device",
            "filter": "driver_uri=homey:app:com.plugwise.smile&driver_id=smilep1",
            "placeholder": {
              "en": "Which Smile device",
              "nl": "Welk Smile apparaat"
             }
          }
        ],
        "tokens":[
          {
            "name":"power",
            "title": {
              "en":"Watt",
              "nl":"Watt"
            }
          },
          {
            "name":"power_delta",
            "title": {
              "en":"+- W",
              "nl":"+- W"
            }
          }
        ]
      }
    ],
    "conditions": [
      {
        "id": "offPeak",
        "title": {
          "en": "Tariff !{{is|isn't}} off-peak",
          "nl": "Tarief !{{is|is niet}} dal"
        },
        "args": [
          {
            "name": "Smile",
            "type": "device",
            "filter": "driver_uri=homey:app:com.plugwise.smile&driver_id=smilep1",
            "placeholder": {
              "en": "Which Smile device",
              "nl": "Welk Smile apparaat"
             }
          }
        ]
      }
    ]
  },
  "screensavers": [
		{
			"name": "smile_power",
			"title": {
				"en": "Plugwise Smile P1 Power",
				"nl": "Plugwise Smile P1 Energie"
			}
		}
  ],
  "permissions": [
    "homey:manager:ledring"
  ]
}
